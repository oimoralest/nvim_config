{
    // Python
    "pyright.enable": true,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.analysis.extraPaths": [".", "../layers"],
    "languageServer": {
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform",
                "tf"
            ]
        }
    }
}
